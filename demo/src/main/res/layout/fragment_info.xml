<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.notifications.InfoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayBg"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:text="公共方法测试"/>
            <Button
                android:id="@+id/bytes_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始数据显示开关" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/get_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Info"/>

                <Button
                    android:id="@+id/get_file_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get File List"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:text="读文件(文件名为空则读完设备文件)"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/read_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read File"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/file_name"
                    android:hint="文件名"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"/>
                <Button
                    android:id="@+id/pause_rf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pause"
                    android:visibility="gone"
                    android:layout_marginStart="20dp"/>
                <Button
                    android:id="@+id/continue_rf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continute"
                    android:visibility="gone"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:text="设置"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"/>
                <Button
                    android:id="@+id/factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Factory"
                    android:layout_marginStart="20dp"/>
                <Button
                    android:id="@+id/factory_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Factory All"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/get_mtu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="getMtu"/>
                <EditText
                    android:id="@+id/mtu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:hint="-----MTU-----"/>
                <Button
                    android:id="@+id/set_mtu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="setMtu"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="upgrade" />
                <Button
                    android:id="@+id/scan_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scan code"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/send_cmd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/response_cmd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/receive_cmd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
