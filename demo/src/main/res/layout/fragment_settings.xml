<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <Button
                android:visibility="gone"
                android:id="@+id/bytes_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始数据显示开关" />
            <include
                android:id="@+id/er1_layout"
                layout="@layout/er1_settings"/>
            <include
                android:id="@+id/er2_layout"
                layout="@layout/er2_settings"/>
            <include
                android:id="@+id/bp2_layout"
                layout="@layout/bp2_settings"/>
            <include
                android:id="@+id/vtm01_layout"
                layout="@layout/vtm01_settings"/>
            <LinearLayout
                android:id="@+id/le_bp2w_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/le_bp2w_utc_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UTC时间"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/le_bp2w_user_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="写用户信息"/>
                    <Button
                        android:id="@+id/le_bp2w_get_file_crc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取文件列表crc"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <include
                android:id="@+id/o2_layout"
                layout="@layout/o2_settings"/>
            <LinearLayout
                android:id="@+id/scale_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/scale_user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前用户"/>

                    <Button
                        android:id="@+id/scale_user_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户列表"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pc100_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc100_bp_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血压状态"/>
                    <Button
                        android:id="@+id/pc100_bo_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血氧状态"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <include
                android:id="@+id/ap20_layout"
                layout="@layout/ap20_settings"/>
            <include
                android:id="@+id/lew_layout"
                layout="@layout/lew_settings"/>
            <include
                android:id="@+id/sp20_layout"
                layout="@layout/sp20_settings"/>
            <LinearLayout
                android:id="@+id/aoj20a_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/aoj20a_delete_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除记录"/>
                    <Button
                        android:id="@+id/aoj20a_rt_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取最新测量数据"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pc68b_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc68b_get_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取配置"/>
                    <Button
                        android:id="@+id/pc68b_set_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配置参数"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc68b_state_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定时查询状态"/>
                    <Button
                        android:id="@+id/pc68b_delete_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除记录"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ad5_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/ad5_enable_rt_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使能开关"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pc300_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc300_set_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置波形数据位数"/>
                    <Button
                        android:id="@+id/pc300_set_glu_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置血糖单位"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc300_set_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置ID"/>
                    <Button
                        android:id="@+id/pc300_get_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取ID"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc300_set_bs_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置血糖仪类型"/>
                    <Button
                        android:id="@+id/pc300_get_bs_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取血糖仪类型"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc300_set_temp_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置温度模式"/>
                    <Button
                        android:id="@+id/pc300_get_temp_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取温度模式"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pc300_set_bp_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置血压类型"/>
                    <Button
                        android:id="@+id/pc300_get_bp_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取血压类型"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>-->
            </LinearLayout>
            <include
                android:id="@+id/lem_layout"
                layout="@layout/lem_settings"/>
            <LinearLayout
                android:id="@+id/bpm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/bpm_get_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备状态"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pc60fw_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="branch code:" />
                    <EditText
                        android:id="@+id/pc60fw_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="长度:8位"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/pc60fw_set_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"/>
            </LinearLayout>
            <include
                android:id="@+id/er3_layout"
                layout="@layout/er3_settings"/>
            <include
                android:id="@+id/lepod_layout"
                layout="@layout/lepod_settings"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/device_info"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/send_cmd"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/response_cmd"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/receive_cmd"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(以下是数据解析日志)"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
